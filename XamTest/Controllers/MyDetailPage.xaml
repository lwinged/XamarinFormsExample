	<ContentPage.Content>
		<ScrollView>
			<StackLayout VerticalOptions="Start" HorizontalOptions="Center">
				<Label Text="" WidthRequest="100" x:Name="nameLabel"/>
				<Label Text="{Binding Name}" WidthRequest="100"/>

				<ActivityIndicator Color="Red" IsRunning="false" x:Name="spinner"/>
				<Button Text="get STRING" Clicked="OnClicked"/>
				<Label Text="" x:Name="resultLabel" WidthRequest="300"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
